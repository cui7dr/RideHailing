<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:title="@string/owner_info_title"
        android:titleTextColor="@color/black" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/owner_info_name"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tv_ownerInfo_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/owner_info_sex"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tv_ownerInfo_sex"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="男"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/owner_info_birth"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tv_ownerInfo_birth"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="2000-01-01"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/owner_info_country"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tv_ownerInfo_country"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="中国"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owner_info_address"
            android:textColor="@color/black"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_ownerInfo_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="河南省郑州市xxxxx"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owner_info_licenseNum"
            android:textColor="@color/black"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_ownerInfo_licenseNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="410102200001010010"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/owner_info_drivingModels"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tv_ownerInfo_drivingModels"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="C1"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/owner_info_plate"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tv_ownerInfo_plate"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="豫AG931C"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owner_info_validPeriod"
            android:textColor="@color/black"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/owner_info_initialDate"
            android:textColor="@color/teal_700"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/tv_ownerInfo_initialDate"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="2020年12月31日"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/owner_info_effectiveDate"
            android:textColor="@color/teal_700"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/tv_ownerInfo_effectiveDate"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="2020年12月31日"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>