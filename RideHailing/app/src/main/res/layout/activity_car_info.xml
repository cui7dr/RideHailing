<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_carInfo_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="2dp"
        app:title="@string/car_info_title"
        app:titleTextColor="@color/black" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/car_info_transport"
                android:textColor="@color/black"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_carInfo_transport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="411521000011"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/car_info_address"
                android:textColor="@color/black"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_carInfo_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="郑州市高新区创业中心"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/car_info_plate"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_carInfo_plate"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="豫AG931C"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/car_info_vehicleModel"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_carInfo_vehicleModel"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="特斯拉"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/car_info_seat"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_carInfo_seat"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="5 座"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/car_info_color"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_carInfo_color"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="白色"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/car_info_size"
                android:textColor="@color/black"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_carInfo_Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长4567毫米、宽1814毫米、高1460毫米"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/car_info_businessScope"
                android:textColor="@color/black"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_carInfo_businessScope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络预约出租车客运"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/car_info_operationStatus"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="运营"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/car_info_issuingAuthority"
                android:textColor="@color/black"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_organ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="郑州市道路运输管理局"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>